{
  "name": "parent-portal-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "install:all": "npm install && npm run build:packages",
    "build:packages": "npm run build --workspace=packages/config && npm run build --workspace=packages/design-tokens && npm run build --workspace=packages/sdk"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.0",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18"
  }
}